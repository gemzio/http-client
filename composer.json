{
    "name": "gemz/http-client",
    "description": "Gemz Http Client is a simple Symfony Http-Client wrapper to provide an easy development experience for most use cases.",
    "keywords": [
        "gemz",
        "http-client"
    ],
    "homepage": "https://github.com/gemzio/http-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefan Riehl",
            "email": "stefan@sriehl.com",
            "homepage": "https://gemz.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.3",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.2",
        "orchestra/testbench": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Gemz\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gemz\\Skeleton\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Gemz\\Skeleton\\SkeletonServiceProvider"
            ],
            "aliases": {
                "Skeleton": "Gemz\\Skeleton\\SkeletonFacade"
            }
        }
    }
}
